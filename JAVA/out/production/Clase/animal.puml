@startuml
    class Animal {
        - int edad
        - String nombre
        + Animal(int edad, String nombre)
        + int getEdad()
        + void setEdad(int edad)
        + String getNombre()
        + void setNombre(String nombre)
        + void dormir()
        + void hacerSonido()
    }

    class Perro {
        - String raza
        + Perro(int edad, String nombre, String raza)
        + void hacerSonido()
    }

    Animal --|> Perro
@enduml